<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context="kategori.DataKategoriActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:background="?android:attr/colorBackground"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/panah"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Kembali"
                    app:tint="?attr/colorOnSurface"/>

                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cari"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Cari"
                    app:tint="?attr/colorOnSurface"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Cari Data Kategori"
                    android:textSize="22sp"
                    android:textStyle="normal|italic"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingBottom="80dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:contentDescription="Lihat kategori"
                tools:listitem="@layout/item_data_kategori"
                tools:itemCount="7"/>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnTambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/tambah"
        android:contentDescription="Tambah Kategori"
        app:tint="@android:color/black"
        app:fabSize="normal"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>