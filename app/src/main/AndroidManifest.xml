<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nurlana.kasir">

    <!-- Tambahkan permission internet untuk Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kasir">

        <!-- MainActivity sebagai launcher (exported=true) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- DataKategoriActivity -->
        <activity
            android:name=".kategori.DataKategoriActivity"
            android:exported="false"
            android:label="Data Kategori" />

        <!-- ModKategoriActivity -->
        <activity
            android:name=".kategori.ModKategoriActivity"
            android:exported="false"
            android:label="Tambah/Edit Kategori" />

        <!-- HAPUS INI - ModelKategori adalah Data Class, bukan Activity -->
        <!-- <activity
            android:name=".model.ModelKategori"
            android:exported="false" /> -->

    </application>

</manifest>